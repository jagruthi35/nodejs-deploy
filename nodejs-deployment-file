---
apiVersion: v1
kind: Deployment
metadata:
  name: node-js-deploy
  labels:
    name: node-js-deploy
    app: node app
spec:
  replicas: 1
  selector:
    matchLabels:
      name: node-js-deploy
      app: node app
  template:
    metadata:
      name: node-app-pod
      labels:
        name: node-app-pod
        app: node app
    spec:
      containers:
      - name: node-app
        image: jagruthi56/nodejs-frontend:v1
        ports:
        - containerPort: 80

